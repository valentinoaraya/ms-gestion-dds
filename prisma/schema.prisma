generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Universidad {
  id         Int        @id @default(autoincrement())
  nombre     String
  sigla      String
  facultades Facultad[]
}

model Facultad {
  id            Int         @id @default(autoincrement())
  nombre        String
  abreviatura   String
  directorio    String
  sigla         String
  ciudad        String
  codigoPostal  String
  telefono      String
  domicilio     String
  email         String
  contacto      String
  universidadId Int
  universidad   Universidad @relation(fields: [universidadId], references: [id])
}

model Especialidad {
  id     Int    @id @default(autoincrement())
  nombre String
}
